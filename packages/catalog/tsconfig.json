{
  "extends": "@repo/typescript-config/node.json",
  "compilerOptions": {
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
